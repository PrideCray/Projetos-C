#include <stdio.h>

int main() {
    //declarando a matriz
    int m[4][4];
    int i, j;
    
    //variar as linhas
    for(i=0; i<=3; i++)
    {
        //variar as colunas
        for(j=0; j<=3;j++)
        {
            printf("Digite um nÃºmero na linha %d e coluna %d\n", i, j);
            scanf("%d", &m[i][j]);
        }
    }

    //imprimir a matriz
    for(i=0; i<=3; i++)
    {
        for(j=0; j<=3;j++)
        {
            if(i=j)
            {
                printf("%d  ", &m[i][j]);
            }
        }

    }
    
    return 0;
}
